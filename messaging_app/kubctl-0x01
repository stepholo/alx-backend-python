#!/bin/bash

DEPLOYMENT_NAME="django-messaging-app"
SERVICE_NAME="messaging-service"
NAMESPACE="default"
PORT=8000

echo "ğŸ“¦ Scaling $DEPLOYMENT_NAME to 3 replicas..."
kubectl scale deployment $DEPLOYMENT_NAME --replicas=3

echo "â³ Waiting for pods to scale up..."
sleep 10

echo "ğŸ“‹ Listing all pods:"
kubectl get pods -l app=messaging

echo "ğŸ” Getting ClusterIP of the service..."
CLUSTER_IP=$(kubectl get svc $SERVICE_NAME -o jsonpath='{.spec.clusterIP}')

if [[ -z "$CLUSTER_IP" ]]; then
  echo "âŒ Could not find ClusterIP for $SERVICE_NAME"
  exit 1
fi

echo "ğŸ§ª Starting load test using wrk on http://${CLUSTER_IP}:${PORT}/"
wrk -t4 -c100 -d15s http://${CLUSTER_IP}:${PORT}/

echo "ğŸ“Š Monitoring resource usage:"
kubectl top pods

